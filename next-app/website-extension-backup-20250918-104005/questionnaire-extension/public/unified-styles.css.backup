/* Circular Checkbox and Radio Button Styling */
.option input[type="checkbox"],
.option input[type="radio"] {
    width: 20px;
    height: 20px;
    margin: 0;
    cursor: pointer;
    border-radius: 50%;
    appearance: none;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.option input[type="checkbox"]:checked,
.option input[type="radio"]:checked {
    background: #3b82f6;
    border-color: #3b82f6;
}

.option input[type="checkbox"]:hover,
.option input[type="radio"]:hover {
    border-color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
}

.option input[type="checkbox"]:checked:hover,
.option input[type="radio"]:checked:hover {
    background: #2563eb;
    border-color: #2563eb;
}

/* General Text Input Styling */
input[type="text"] {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 0.75rem 1rem;
    color: #ffffff;
    width: 100%;
    font-size: 1rem;
    transition: all 0.3s ease;
}

input[type="text"]:focus {
    outline: none;
    border-color: #3b82f6;
    background: rgba(255, 255, 255, 0.08);
}

input[type="text"]::placeholder {
    color: #9ca3af;
}

input[type="text"].error {
    border-color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
}
