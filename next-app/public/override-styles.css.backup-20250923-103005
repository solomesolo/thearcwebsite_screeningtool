/* Force circular checkboxes and radio buttons with high specificity */
.questionnaire-container .option input[type="checkbox"],
.questionnaire-container .option input[type="radio"],
body .option input[type="checkbox"],
body .option input[type="radio"] {
    width: 20px !important;
    height: 20px !important;
    margin: 0 !important;
    cursor: pointer !important;
    border-radius: 50% !important;
    appearance: none !important;
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    background: rgba(255, 255, 255, 0.1) !important;
    border: 2px solid rgba(255, 255, 255, 0.3) !important;
    transition: all 0.3s ease !important;
}

.questionnaire-container .option input[type="checkbox"]:checked,
.questionnaire-container .option input[type="radio"]:checked,
body .option input[type="checkbox"]:checked,
body .option input[type="radio"]:checked {
    background: #3b82f6 !important;
    border-color: #3b82f6 !important;
}

.questionnaire-container .option input[type="checkbox"]:hover,
.questionnaire-container .option input[type="radio"]:hover,
body .option input[type="checkbox"]:hover,
body .option input[type="radio"]:hover {
    border-color: #3b82f6 !important;
    background: rgba(59, 130, 246, 0.1) !important;
}

.questionnaire-container .option input[type="checkbox"]:checked:hover,
.questionnaire-container .option input[type="radio"]:checked:hover,
body .option input[type="checkbox"]:checked:hover,
body .option input[type="radio"]:checked:hover {
