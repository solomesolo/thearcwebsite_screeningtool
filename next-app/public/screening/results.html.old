<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Personalized Screening Plan - Right Screening Finder</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <style>
        /* Reset all default styles and force dark theme */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            background-color: #0a0a0a !important;
            background-image: none !important;
            color-scheme: dark !important;
        }
        
        body {
            background-color: #0a0a0a !important;
            background-image: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%) !important;
            color: #ffffff !important;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            min-height: 100vh;
            padding: 3rem;
            position: relative;
            overflow-x: hidden;
            color-scheme: dark !important;
        }
        
        /* Multiple background layers to ensure dark background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #0a0a0a;
            background-image: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%);
            z-index: -10;
            pointer-events: none;
        }
        
        body::after {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 60%, rgba(16, 185, 129, 0.05) 0%, transparent 50%);
            pointer-events: none;
            z-index: -5;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 3rem;
            min-height: calc(100vh - 6rem);
        }
        
        .header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            -webkit-text-fill-color: transparent;
        }
        
        .header p {
            font-size: 1.2rem;
            color: #cbd5e1;
            max-width: 600px;
            margin: 0 auto;
        }
        
        .results-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }
        
        .results-card {
            background-color: rgba(26, 26, 26, 0.95) !important;
            background-image: none !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.05);
        }
        
        .results-card h2 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #ffffff;
        }
        
        .urgent-tests {
            background-color: rgba(239, 68, 68, 0.1) !important;
            background-image: none !important;
            border-color: rgba(239, 68, 68, 0.3);
        }
        
        .urgent-tests h2 {
            color: #fca5a5;
        }
        
        .due-soon-tests {
            background-color: rgba(245, 158, 11, 0.1) !important;
            background-image: none !important;
            border-color: rgba(245, 158, 11, 0.3);
        }
        
        .due-soon-tests h2 {
            color: #fbbf24;
        }
        
        .test-list {
            list-style: none;
        }
        
        .test-item {
            padding: 1rem;
            margin-bottom: 0.75rem;
            background-color: rgba(255, 255, 255, 0.05);
            background-image: none !important;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .test-item h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #ffffff;
        }
        
        .test-item p {
            color: #cbd5e1;
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        .categories-section {
            background-color: rgba(26, 26, 26, 0.95) !important;
            background-image: none !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(255, 255, 255, 0.05);
        }
        
        .categories-section h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 2rem;
            text-align: center;
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            -webkit-text-fill-color: transparent;
        }
        
        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }
        
        .category-card {
            background-color: rgba(255, 255, 255, 0.05);
            background-image: none !important;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .category-card:hover {
            background-color: rgba(255, 255, 255, 0.08);
            background-image: none !important;
            border-color: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }
        
        .category-card h3 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #ffffff;
        }
        
        .category-card p {
            color: #cbd5e1;
            line-height: 1.6;
        }
        
        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 3rem;
        }
        
        .btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            background-color: #3b82f6;
            color: #ffffff;
            box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(59, 130, 246, 0.4);
        }
        
        .btn-secondary {
            background-color: rgba(255, 255, 255, 0.1);
            background-image: none !important;
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .btn-secondary:hover {
            background-color: rgba(255, 255, 255, 0.15);
            background-image: none !important;
            transform: translateY(-2px);
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .results-grid {
                grid-template-columns: 1fr;
            }
            
            .categories-grid {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .header h1 {
                font-size: 2rem;
            }
        }
        
        /* Safari-specific fixes */
        @media screen and (-webkit-min-device-pixel-ratio: 0) {
            body {
                background-color: #0a0a0a !important;
                background-image: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%) !important;
            }
            
            .results-card {
                background-color: rgba(26, 26, 26, 0.95) !important;
            }
            
            .categories-section {
                background-color: rgba(26, 26, 26, 0.95) !important;
            }
            
            .category-card {
                background-color: rgba(255, 255, 255, 0.05) !important;
            }
            
            .test-item {
                background-color: rgba(255, 255, 255, 0.05) !important;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Your Personalized Screening Plan</h1>
            <p>Based on your responses, here are the health screenings we recommend for you. These recommendations are tailored to your age, lifestyle, family history, and current health status.</p>
        </div>
        
        <div class="results-grid">
            <div class="results-card urgent-tests">
                <h2>🚨 Urgent Tests</h2>
                <ul class="test-list" id="urgentTests">
                    <!-- Urgent tests will be populated here -->
                </ul>
            </div>
            
            <div class="results-card due-soon-tests">
                <h2>⚠️ Due Soon</h2>
                <ul class="test-list" id="dueSoonTests">
                    <!-- Due soon tests will be populated here -->
                </ul>
            </div>
        </div>
        
        <div class="categories-section">
            <h2>Recommended Screening Categories</h2>
            <div class="categories-grid" id="categoriesGrid">
                <!-- Categories will be populated here -->
            </div>
        </div>
        
        <div class="action-buttons">
            <button class="btn btn-primary" onclick="downloadPDF()">
                📄 Download PDF
            </button>
            <a href="index.html" class="btn btn-secondary">
                🏠 Back to Home
            </a>
        </div>
    </div>

    <script>
        // Force dark background immediately on load
        document.documentElement.style.backgroundColor = '#0a0a0a';
        document.documentElement.style.backgroundImage = 'linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%)';
        document.body.style.backgroundColor = '#0a0a0a';
        document.body.style.backgroundImage = 'linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%)';
        
        let healthResults = null;
        
        function loadResults() {
            try {
                const resultsData = localStorage.getItem('healthAssessmentResults');
                if (resultsData) {
                    healthResults = JSON.parse(resultsData);
                    displayResults();
                } else {
                    // Fallback if no results found
                    displayFallbackResults();
                }
            } catch (error) {
                console.error('Error loading results:', error);
                displayFallbackResults();
            }
        }
        
        function displayResults() {
            if (!healthResults) {
                displayFallbackResults();
                return;
            }
            
            // Display urgent tests
            const urgentTestsList = document.getElementById('urgentTests');
            if (healthResults.urgentTests && healthResults.urgentTests.length > 0) {
                healthResults.urgentTests.forEach(test => {
                    const li = document.createElement('li');
                    li.className = 'test-item';
                    li.innerHTML = `
                        <h3>${test.name}</h3>
                        <p>${test.reason}</p>
                    `;
                    urgentTestsList.appendChild(li);
                });
            } else {
                urgentTestsList.innerHTML = '<li class="test-item"><p>No urgent tests identified at this time.</p></li>';
            }
            
            // Display due soon tests
            const dueSoonTestsList = document.getElementById('dueSoonTests');
            if (healthResults.dueSoonTests && healthResults.dueSoonTests.length > 0) {
                healthResults.dueSoonTests.forEach(test => {
                    const li = document.createElement('li');
                    li.className = 'test-item';
                    li.innerHTML = `
                        <h3>${test.name}</h3>
                        <p>${test.reason}</p>
                    `;
                    dueSoonTestsList.appendChild(li);
                });
            } else {
                dueSoonTestsList.innerHTML = '<li class="test-item"><p>No tests due soon.</p></li>';
            }
            
            // Display categories
            const categoriesGrid = document.getElementById('categoriesGrid');
            if (healthResults.categories && healthResults.categories.length > 0) {
                healthResults.categories.forEach(category => {
                    const div = document.createElement('div');
                    div.className = 'category-card';
                    div.innerHTML = `
                        <h3>${category.name}</h3>
                        <p>${category.description}</p>
                    `;
                    categoriesGrid.appendChild(div);
                });
            } else {
                categoriesGrid.innerHTML = '<div class="category-card"><p>No specific categories identified.</p></div>';
            }
        }
        
        function displayFallbackResults() {
            // Fallback content when no results are available
            const urgentTestsList = document.getElementById('urgentTests');
            urgentTestsList.innerHTML = `
                <li class="test-item">
                    <h3>Complete Blood Count (CBC)</h3>
                    <p>Basic screening test to check for anemia, infections, and blood disorders.</p>
                </li>
                <li class="test-item">
                    <h3>Lipid Panel</h3>
                    <p>Measures cholesterol levels to assess cardiovascular risk.</p>
                </li>
            `;
            
            const dueSoonTestsList = document.getElementById('dueSoonTests');
            dueSoonTestsList.innerHTML = `
                <li class="test-item">
                    <h3>Blood Pressure Check</h3>
                    <p>Regular monitoring of blood pressure for cardiovascular health.</p>
                </li>
                <li class="test-item">
                    <h3>Blood Glucose Test</h3>
                    <p>Screening for diabetes and prediabetes.</p>
                </li>
            `;
            
            const categoriesGrid = document.getElementById('categoriesGrid');
            categoriesGrid.innerHTML = `
                <div class="category-card">
                    <h3>Cardiovascular Health</h3>
                    <p>Tests to assess heart and blood vessel health, including cholesterol, blood pressure, and heart function.</p>
                </div>
                <div class="category-card">
                    <h3>Metabolic Health</h3>
                    <p>Screening for diabetes, insulin resistance, and metabolic syndrome.</p>
                </div>
                <div class="category-card">
                    <h3>Hormonal Health</h3>
                    <p>Assessment of thyroid, reproductive, and stress hormones.</p>
                </div>
                <div class="category-card">
                    <h3>Nutritional Status</h3>
                    <p>Evaluation of vitamin and mineral levels, including B12, D, and iron.</p>
                </div>
            `;
        }
        
        async function downloadPDF() {
            try {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                
                // Add title
                doc.setFontSize(20);
                doc.text('Your Personalized Screening Plan', 20, 30);
                
                // Add urgent tests
                doc.setFontSize(16);
                doc.text('Urgent Tests:', 20, 50);
                doc.setFontSize(12);
                
                let yPosition = 60;
                const urgentTestsList = document.getElementById('urgentTests');
                const urgentItems = urgentTestsList.querySelectorAll('.test-item');
                
                urgentItems.forEach(item => {
                    const title = item.querySelector('h3').textContent;
                    const description = item.querySelector('p').textContent;
                    
                    doc.text(title, 20, yPosition);
                    yPosition += 10;
                    doc.text(description, 25, yPosition);
                    yPosition += 15;
                    
                    if (yPosition > 250) {
                        doc.addPage();
                        yPosition = 20;
                    }
                });
                
                // Add due soon tests
                yPosition += 10;
                doc.setFontSize(16);
                doc.text('Due Soon:', 20, yPosition);
                yPosition += 10;
                doc.setFontSize(12);
                
                const dueSoonTestsList = document.getElementById('dueSoonTests');
                const dueSoonItems = dueSoonTestsList.querySelectorAll('.test-item');
                
                dueSoonItems.forEach(item => {
                    const title = item.querySelector('h3').textContent;
                    const description = item.querySelector('p').textContent;
                    
                    doc.text(title, 20, yPosition);
                    yPosition += 10;
                    doc.text(description, 25, yPosition);
                    yPosition += 15;
                    
                    if (yPosition > 250) {
                        doc.addPage();
                        yPosition = 20;
                    }
                });
                
                // Save the PDF
                doc.save('personalized-screening-plan.pdf');
                
            } catch (error) {
                console.error('Error generating PDF:', error);
                alert('Error generating PDF. Please try again.');
            }
        }
        
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            loadResults();
            
            // Force dark background again after DOM load
            document.documentElement.style.backgroundColor = '#0a0a0a';
            document.body.style.backgroundColor = '#0a0a0a';
            
            // Force dark background with timeout
            setTimeout(function() {
                document.documentElement.style.backgroundColor = '#0a0a0a';
                document.body.style.backgroundColor = '#0a0a0a';
            }, 100);
        });
    </script>
</body>
</html>
